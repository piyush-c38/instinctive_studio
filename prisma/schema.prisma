generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Camera {
  id        String     @id @default(cuid())
  name      String
  location  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  incidents Incident[]

  @@map("cameras")
}

model Incident {
  id           String    @id @default(cuid())
  cameraId     String
  type         String
  tsStart      DateTime  @default(now())
  tsEnd        DateTime?
  thumbnailUrl String
  resolved     Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  camera       Camera    @relation(fields: [cameraId], references: [id])

  @@map("incidents")
}
